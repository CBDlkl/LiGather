}

<div class="container-fluid banner">
    <div class="banseo">
        <div class="bannertitle"><a href="#">北京企业工商信息查询</a></div>
        @using (Html.BeginForm("SingelSearch", "Crawler", FormMethod.Post, new { @id = "searchForm", @onsubmit = "return formSubmit()" }))
        {
            @Html.TextBox("searchInfo", "", new { @class = "bantxt", @placeholder = "搜索企业名称（精确匹配）" })
            @Html.Hidden("guid", (object)ViewBag.Guid)
            <button class="btn banbutt" id="seobut" type="button" onclick="formSubmit()">
                <span class="glyphicon glyphicon-search"></span>
            </button>
        }
    </div>
    <div style="clear: both;"></div>
    <canvas></canvas>
</div>

