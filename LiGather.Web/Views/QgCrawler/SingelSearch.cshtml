            </div>*@
        <div class="col-lg-12">
            <hr>
            <div>
                @if (Model == null)
                {
                    <h2 class="text-center">未查询到内容！</h2>
                }
                else
                {
                    <div class="col-lg-6">
                        <h4>全国组织机构代码管理中心</h4>
                        <dl class="dl-horizontal">
                            <dt>@Html.LabelFor(t => t.companyName)</dt>
                            <dd>@Model.companyName</dd>

                            <dt>@Html.LabelFor(t => t.jgmc)</dt>
                            <dd>@Model.jgmc</dd>

                            <dt>@Html.LabelFor(t => t.jgdm)</dt>
                            <dd>@Model.jgdm</dd>

                            <dt>@Html.LabelFor(t => t.jgdz)</dt>
                            <dd>@Model.jgdz</dd>

                            <dt>@Html.LabelFor(t => t.jglx)</dt>
                            <dd>@Model.jglx</dd>

                            <dt>@Html.LabelFor(t => t.zch)</dt>
                            <dd>@Model.zch</dd>

                            <dt>@Html.LabelFor(t => t.bzjgmcs)</dt>
                            <dd>@Model.bzjgmcs</dd>

                            <dt>@Html.LabelFor(t => t.zcrq)</dt>
                            <dd>@Model.zcrq</dd>

                            <dt>@Html.LabelFor(t => t.zfrq)</dt>
                            <dd>@Model.zfrq</dd>

                        </dl>
                    </div>
                    <div class="col-lg-6">
                    </div>
                }

            </div>
        </div>
    </div>
</div>

@section Script{
    <script type="text/javascript">
        var formSubmit = function () {
            $input = $("input#searchtxt").val();
            if ($input === '') {
                layer.alert('请输入搜索企业名', { icon: 0 });
                return false;
            }
            layer.msg('搜索中...', { icon: 16, time: 1000 * 1000, shade: 0.5 });
            $('form#searchForm').ajaxForm(function () {
                
            });
        };
    </script>
}
