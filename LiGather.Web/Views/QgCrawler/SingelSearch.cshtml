@model LiGather.Model.Domain.QgOrgCodeEntity

@{
    ViewBag.Title = "企业数据查询中心 - 独立查询";
    Layout = "../_LayoutPage.cshtml";
}

@Html.Raw(ViewBag.TimeOut)

<div class="container-fluid banner">
    <div class="banseo">
        <div class="bannertitle"><a href="#">全国组织机构代码查询</a></div>
        @using (Html.BeginForm("SingelSearch", "QgCrawler", FormMethod.Post, new { @id = "searchForm", @onsubmit = "return formSubmit()" }))
        {
            @Html.TextBox("searchInfo", "", new { @class = "bantxt", @placeholder = "搜索企业名称（精确匹配）" })
            @Html.Hidden("Guid", (object)ViewBag.Guid)
            <button class="btn banbutt" id="seobut" type="button" onclick="formSubmit()">
                <span class="glyphicon glyphicon-search"></span>
            </button>
        }
    </div>
    <div style="clear: both;"></div>
    <canvas></canvas>
</div>

<div class="container">
    <div class="row">
        @*<div class="col-lg-12">
                <br />
                @using (Html.BeginForm("SingelSearch", "QgCrawler", FormMethod.Post, new { @id = "searchForm", @class = "bs-example bs-example-form" }))
                {
                    <div class="input-group">
                        @Html.TextBox("companyName", "", new { @class = "form-control", @placeholder = "搜索企业名称（精确匹配）" })
                        @Html.Hidden("Guid", (object)ViewBag.Guid)
                        <span class="input-group-btn">
