<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>企业数据查询中心 - @ViewBag.Title</title>
    <link href="~/Content/bootstrap/css/bootstrap.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/my.css" rel="stylesheet" />
    <script src="~/Content/bootstrap/js/jquery-1.11.3.js"></script>
    <script src="~/Scripts/jquery.form.js"></script>
    <script src="~/Content/layer/layer.js"></script>
    <script src="~/Content/bootstrap/js/bootstrap.js" type="text/javascript"></script>
    <script src="~/Scripts/jquery.cookie.min.js"></script>
    <script src="~/Scripts/ban.js"></script>
</head>
<body style="padding-top: 50px;">
    <nav class="navbar navbar-inverse navbar-fixed-top" role="navigation">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse"
                    data-target="#example-navbar-collapse">
                <span class="sr-only">切换导航</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <a class="navbar-brand active" href="/Crawler/TaskList" style="color: white;">企业数据查询中心</a>
        </div>
        <div class="collapse navbar-collapse" id="example-navbar-collapse">
            <ul class="nav navbar-nav">
                <li class="dropdown">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                        北京企业信用信息网 <b class="caret"></b>
                    </a>
                    <ul class="dropdown-menu">
                        <li><a href="/Crawler/TaskList">批量查询</a></li>
                        <li class="divider"></li>
                        <li><a href="/Crawler/SingelSearch">单例查询</a></li>
                    </ul>
                </li>
                <li class="dropdown">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                        全国组织机构代码网 <b class="caret"></b>
                    </a>
                    <ul class="dropdown-menu">
                        <li><a href="/QgCrawler/TaskList">批量查询</a></li>
                        <li class="divider"></li>
                        <li><a href="/QgCrawler/SingelSearch">单例查询</a></li>
                    </ul>
                </li>
            </ul>
            <p class="navbar-text navbar-right" style="padding-right: 30px;">TryCatch</p>
        </div>
    </nav>

    @RenderBody()

    <script type="text/javascript">
        $(function () {
            $('#searchInfo').bind({
                focus: function () {
                    $(this).css({ "border": "1px solid #B9B9B9", "transition": "all 1.5s ease 0s" });
                    $("div.bannertitle a").css({ "color": "white", "transition": "all 1.5s ease 0" });
                },
                blur: function () {
                    $(this).css({ "border": "1px solid #2c2c2c", "transition": "all 1.5s ease 0s" });
                    $("div.bannertitle a").css({ "color": "gray", "transition": "all 1.5s ease 0" });
                }
            });
            $('div.bannertitle a').hover(function () {
                $(this).css({ "color": "white", "transition": "all 1.5s ease 0" });
            }, function () {
                $(this).css({ "color": "gray", "transition": "all 1.5s ease 0" });
            }
            );
        });

        var formSubmit = function () {
            $input = $("input#searchInfo").val();
            if ($input === '') {
                layer.alert('请输入搜索内容', { icon: 0 });
                return false;
            }
            layer.msg('搜索中...', { icon: 16, time: 1000 * 3, shade: 0.5 });
            $('form#searchForm').ajaxForm(function () { });
        };
    </script>

    @RenderSection("Script", false)

</body>
</html>
